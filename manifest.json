{
  "manifest_version": 2,
  "name": "Leefbaarometer voor Funda",
  "version": "1.0",

  "description": "Een widget die de leefbaarheid van een buurt weergeeft op Funda.",

  "icons": {
    "96": "icons/icon96.png"
  },

  "content_scripts": [
    {
      "matches": ["*://www.funda.nl/zoeken/kaart/*"],
      "js": [
        "modules/utils.js",
        "modules/PostalCode.js",
        "modules/Dimension.js",
        "map.js"
      ]
    },
    {
      "matches": [
        "*://www.funda.nl/detail/*",
        "*://www.funda.nl/koop/*",
        "*://www.funda.nl/huur/*"
      ],
      "js": [
        "modules/utils.js",
        "modules/PostalCode.js",
        "modules/Dimension.js",
        "details.js"
      ]
    }
  ]
}
